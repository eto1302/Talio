            <children>
                <Label fx:id="boardLabel" prefHeight="34.0" prefWidth="157.0" style="-fx-label-padding: 1px;" text="Your Boards" GridPane.halignment="LEFT" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                    <font>
                        <Font size="23.0" />
                    </font>
                </Label>
                <MenuButton fx:id="menu" mnemonicParsing="false" prefHeight="37.0" prefWidth="46.0" text="---" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                    <items>
                        <MenuItem fx:id="joinBoard" mnemonicParsing="false" onAction="#showSearch" text="Join board" />
                        <MenuItem fx:id="addBoard" mnemonicParsing="false" onAction="#addBoard" text="Add board" />
                        <MenuItem fx:id="personalize" mnemonicParsing="false" text="Personalize" />
                    </items>
                </MenuButton>
            </children>
        </GridPane>
      <ScrollPane prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="3" GridPane.rowIndex="1">
