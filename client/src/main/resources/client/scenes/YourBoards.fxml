<GridPane prefHeight="462.0" prefWidth="656.0" style="-fx-vgap: 3px;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.YourBoardsController">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="55.0" valignment="TOP" vgrow="NEVER" />
      <RowConstraints maxHeight="353.0" minHeight="10.0" prefHeight="353.0" valignment="TOP" vgrow="NEVER" />
        <RowConstraints maxHeight="342.0" minHeight="10.0" prefHeight="48.0" valignment="BASELINE" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <GridPane maxHeight="45.0" prefHeight="40.0" prefWidth="600.0" style="-fx-background-color: D5D3D3; -fx-padding: 6px;" GridPane.columnSpan="3">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
